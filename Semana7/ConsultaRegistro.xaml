<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7.ConsultaRegistro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Lista de Usuarios" VerticalTextAlignment="Center" FontSize="30" BackgroundColor="LightBlue" />

            <ListView x:Name="listaUsuarios" ItemSelected="listaUsuarios_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Usuario}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>