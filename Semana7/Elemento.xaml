<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar o Eliminar Usuarios" VerticalTextAlignment="Center" FontSize="38" />
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" />
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contrasena" />
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="CornflowerBlue" />
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="LightGoldenrodYellow" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>